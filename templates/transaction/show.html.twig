{% extends 'base.html.twig' %}

{% block title %}Ver Transacción{% endblock %}

{% block body %}
    <h1>Ver Transacción</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ transaction.type }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ transaction.amount }}</td>
            </tr>
            <tr>
                <th>Última Actualización</th>
                <td>{{ transaction.updatedAt ? transaction.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha de Creación</th>
                <td>{{ transaction.creationDate ? transaction.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transaction_index') }}">Regresar a la lista</a>

    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}">Editar</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
